<!--Auto generated. Contains information about the layout main activity  -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.wmich.ex2lperez9518.MainActivity">
<!--TextView widget that will display Audi in the main activity screen. The size is 55sp to fit in any android device. Color has been change
   to give it a better user-interface-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtTitle"
        android:id="@+id/TextViewTitle"
        android:textSize="55sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="166dp"
        android:textColor="@android:color/darker_gray" />
<!--This contains a button widget which i use to open models activity. The button have instruction to display "explore models" for the
  users to know that by clicking it will open another activity-->
    <Button
        android:text="@string/btnExplore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:id="@+id/buttonExplore"
        android:textSize="24sp"
        android:layout_below="@+id/TextViewTitle"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold" />
</RelativeLayout>
